<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Client"
        Title="Chat Lobby" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- DataTemplates for unified chat -->
        <DataTemplate x:Key="MessageTemplate">
            <TextBlock Text="{Binding Content}" />
        </DataTemplate>
        <DataTemplate x:Key="FileTemplate">
            <TextBlock>
                <Hyperlink NavigateUri="{Binding FileName}" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock Text="{Binding Content}" />
                </Hyperlink>
            </TextBlock>
        </DataTemplate>
        <!-- DataTemplateSelector for chat items -->
        <local:ChatItemTemplateSelector x:Key="ChatItemTemplateSelector" MessageTemplate="{StaticResource MessageTemplate}" FileTemplate="{StaticResource FileTemplate}" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Lobby / Rooms Section -->
        <GroupBox Header="Lobby" Grid.Row="0" Grid.Column="0" Margin="5">
            <StackPanel Margin="10">
                <TextBox x:Name="UsernameTextBox" Text="Enter Username" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="LoginButn" Content="Log in" Width="80" Margin="0,0,5,0" Click="LoginButton_Click"/>
                    <Button x:Name="logOutbtn" Content="Log out" Width="80" Click="LogoutButton_Click"/>
                </StackPanel>
                <TextBox x:Name="RoomNameTextBox" Text="Room Name" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="CreateRoomBut" Content="Create Room" Width="100" Margin="0,0,5,0" Click="CreateRoomButton_Click"/>
                </StackPanel>
                <Label Content="Available Rooms" FontWeight="Bold"/>
                <ListBox x:Name="RoomListBox" Height="120" Margin="0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="refreshList" Content="Refresh" Width="70" Margin="0,0,5,0" Click="refreshList_Click"/>
                    <Button x:Name="JoinRoomButton" Content="Join" Width="70" Click="JoinRoomButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Players Section -->
        <GroupBox Header="Players in Room" Grid.Row="0" Grid.Column="1" Margin="5">
            <StackPanel Margin="10">
                <ListBox x:Name="PlayerListBox" Height="120"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="refreshPRoom" Content="Refresh" Width="70" Margin="0,0,5,0" Click="refreshPRoom_Click"/>
                    <Button x:Name="LeaveRoBtn" Content="Leave" Width="70" Click="LeaveRoBtn_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Unified Chat (Messages & Files) -->
        <GroupBox Header="Room Chat" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <Label Content="Chat" FontWeight="Bold"/>
                    <ListBox x:Name="ChatListBox" Height="150" Margin="0,5" ItemTemplateSelector="{StaticResource ChatItemTemplateSelector}" />
                    <TextBox x:Name="RoomMessageTextBox" Text="Type a room message..." Margin="0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="SendRoomMessageButton" Content="Send" Width="80" Margin="0,0,5,0" Click="SendRoomMessageButton_Click"/>
                        <Button x:Name="ShareFileButton" Content="Share File" Width="80" Click="ShareFileButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Private Messaging (Recipient Selector Only) -->
        <GroupBox Header="Private Messages" Grid.Row="1" Grid.Column="2" Margin="5">
            <StackPanel Margin="10">
                <ComboBox x:Name="PrivateMessageRecipientComboBox" Margin="0,5" Width="150"/>
                <Button x:Name="SendPrivateMessageButton" Content="Open Chat" Width="80" Margin="0,5" Click="SendPrivateMessageButton_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>