<Window x:Class="Client.PrivateChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding RecipientUsername}" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Private Messages List -->
        <ListBox x:Name="PrivateMessagesListBox" Grid.Row="0" Margin="0,0,0,5" />
        <!-- Input and Send -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="PrivateMessageTextBox" Text="Type a message..." Width="300" Margin="0,0,5,0" />
            <Button x:Name="SendPrivateMessageButton" Content="Send" Width="80" Click="SendPrivateMessageButton_Click" />
        </StackPanel>
    </Grid>
</Window>